    <main>
        <section id="create-page">
            <div class="create-container">
                <div class="box-image"></div>

                <h2 class="box-heading"> Add new home</h2>


                <form class="form" action="/offers/create" method="POST">
                    <div class="input">
                        <label class="home-name" for="home-name">Name:</label>
                        <input type="text" class="input-field" id="home-name" name="homeName"
                            placeholder="Real House Luxury Villa..." name="" />
                    </div>
                    <div class="input">
                        <input type="text" class="input-field" id="type" placeholder="Villa..." name="type" />
                        <label class="type">Property Type:</label>
                    </div>
                    <div class="input">
                        <input type="number" class="input-field" id="year" placeholder="2018..." name="year" />
                        <label class="year">Year Built:</label>
                    </div>
                    <div class="input">
                        <input type="text" class="input-field" id="city" placeholder="Sofia..." name="city" />
                        <label class="city">City</label>
                    </div>

                    <div class="input">
                        <input type="text" class="input-field" id="homeImage" placeholder="Image..." name="imageUrl" />
                        <label class="homeImage">Home Image:</label>
                    </div>

                    <div class="input">
                        <input type="text" class="input-field" id="description" placeholder="Description..."
                            name="description" />
                        <label class="description">Property Description:</label>
                    </div>

                    <div class="input">
                        <input type="number" class="input-field" id="availablePieces" placeholder="1"
                            name="availablePieces" />
                        <label class="availablePieces">Available pieces:</label>
                    </div>

                    <div class="create-action">
                        <button class="create-button" type="submit">Add</button>
                    </div>

                </form>
            </div>
        </section>
    </main>
